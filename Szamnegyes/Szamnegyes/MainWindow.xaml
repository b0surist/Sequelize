<Window x:Class="Szamnegyes.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Szamnegyes"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions >
            <ColumnDefinition Width="110px"></ColumnDefinition>
            <ColumnDefinition Width="110px"></ColumnDefinition>
            <ColumnDefinition Width="110px"></ColumnDefinition>
            <ColumnDefinition Width="110px"></ColumnDefinition>
            <ColumnDefinition Width="110px"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="110px"></RowDefinition>
            <RowDefinition Height="110px"></RowDefinition>
            <RowDefinition Height="110px"></RowDefinition>
            <RowDefinition Height="110px"></RowDefinition>
            <RowDefinition Height="110px"></RowDefinition>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" HorizontalAlignment="Center" Margin="0,37,0,47">0</Label>
        <Label Grid.Row="1" HorizontalAlignment="Center" Margin="0,37,0,47">0</Label>
        <Label Grid.Row="2" HorizontalAlignment="Center" Margin="0,37,0,47">0</Label>
        <Label Grid.Column="1" Margin="46,40,46,40">0</Label>
        <Label Grid.Column="2" Margin="46,40,46,40">0</Label>
        <Label Grid.Column="1" Grid.Row="1" Margin="46,40,46,40">0</Label>
        <TextBlock Grid.Column="1" Grid.Row="2" Margin="46,40,46,40">0</TextBlock>
        <TextBox Grid.Column="2" Grid.Row="1" Margin="46,40,46,40">0</TextBox>
        <TextBox Grid.Column="2" Grid.Row="2" Margin="46,40,46,40">0</TextBox>
        <Button Grid.Row="3" Grid.Column="0">A</Button>
        <Button Grid.Row="3" Grid.Column="1">B</Button>
        <Button Grid.Row="3" Grid.Column="2">C</Button>
        <Button Grid.Row="3" Grid.Column="3">D</Button>
        <Button Grid.Row="3" Grid.Column="4">Törlés</Button>
    </Grid>
   
</Window>
